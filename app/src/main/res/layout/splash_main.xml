<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/homie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <me.itangqi.waveloadingview.WaveLoadingView
        android:id="@+id/waveLoadingView"
        app:wlv_shapeType="rectangle"
        app:wlv_waveAmplitude="90"
        app:wlv_borderColor="#8BC34A"
        app:wlv_waveColor="@color/colorAccent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/image"

        app:wlv_titleCenterStrokeColor="#8BC34A"
        app:wlv_titleCenterStrokeWidth="3dp"
        app:wlv_titleCenterColor="@color/colorAccent"
        app:wlv_titleCenterSize="24sp"

        app:wlv_titleTopStrokeColor="#8BC34A"
        app:wlv_titleTopStrokeWidth="3dp"
        app:wlv_titleTopColor="@color/colorAccent"
        app:wlv_titleTopSize="24sp"


        app:wlv_titleBottomStrokeColor="#8BC34A"
        app:wlv_titleBottomStrokeWidth="3dp"
        app:wlv_titleBottomColor="@color/colorAccent"
        app:wlv_titleBottomSize="24sp"


        android:layout_height="0dp"
        android:layout_width="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>